<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="010-create-seller-table" author="team46">
        <createTable tableName="seller">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="storeName" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="storeDescription" type="TEXT"/>
            <column name="storeLogo" type="VARCHAR(255)"/>
            <column name="rating" type="DECIMAL(5,2)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
