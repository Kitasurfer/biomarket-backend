<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="009-add-seller-id-to-user" author="team46">
        <!-- Если столбец seller_id уже существует, пропускаем changeset -->
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="user" columnName="seller_id"/>
            </not>
        </preConditions>
        <!-- Добавляем столбец seller_id -->
        <addColumn tableName="user">
            <column name="seller_id" type="BIGINT"/>
        </addColumn>
        <!-- Добавляем внешний ключ -->
        <addForeignKeyConstraint
                baseTableName="user"
                baseColumnNames="seller_id"
                referencedTableName="seller"
                referencedColumnNames="id"
                constraintName="fk_user_seller"/>
    </changeSet>

</databaseChangeLog>
